{
  "name": "Qalam Feedback Filler",
  "description": "Odoo Qalam Nust Feedback Filler Developed By a Mechanic from ME11 SMME NUST",
  "version": "0.0.2",
  "manifest_version": 3,

  "content_scripts": [
    {
      "matches": ["https://qalam.nust.edu.pk/*"],
      "js": ["inject.js"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons": {
    "512": "logo.png"
  },

  "options_page": "./options.html",
  "permissions": ["tabs", "storage"],

"host_permissions": [
  "https://qalam.nust.edu.pk/*"
],
"web_accessible_resources": [
  {
    "resources": [ "logs" ],
    "matches": [ "https://*/*" ]
  }
]

}
